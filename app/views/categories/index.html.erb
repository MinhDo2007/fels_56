<div class="container">
  <div class="row">
    <h1>Categories</h1>     
    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th>Categories name</th>
        <th>Learn process</th>
        <th>Action</th>
      </tr>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td></td>
          <td data-no-turbolink='true'>
            <%= link_to t(:lesson_start), new_category_lesson_path(category.id), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>      
    </table>
  </div>
</div>
