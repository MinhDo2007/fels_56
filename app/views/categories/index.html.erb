<div class="container">
  <div class="row">
    <h1><%= t :categories %></h1>
    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th><%= t :category_name %></th>
        <th><%= t :learning_process %></th>
        <th><%= t :action %></th>
      </tr>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td>
            <%= category.words.learned(current_user).count %> /
            <%= category.words.count %> words
          </td>
          <td data-no-turbolink='true'>
            <%= link_to t(:lesson_start), new_category_lesson_path(category.id), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
