<li>
  <div class="row">
    <div class="col-md-5">
      <%= f.text_field :word_id, hidden: :true, readonly: :true %>
      <h2><%= f.object.word.content %></h2>
    </div>
    <div class="col-md-6">
      <table class="table table-bordered">
        <% f.object.word.answers.each do |answer| %>
          <tr>
            <td><%= f.radio_button :word_correct, answer.correct %></td>
            <td><%= answer.content %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</li>
