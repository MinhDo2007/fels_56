<% provide :title, "Log in" %> <h1><%= I18n.t :log_in %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: log_in_path do |f| %>
      <%= f.label :email, I18n.t(:user_email) %>
      <%= f.email_field :email, class: 'form-control' %>
  
      <%= f.label :password, I18n.t(:password) %>
      <%= f.password_field :password, class: 'form-control' %>
  
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= I18n.t(:remember_me) %></span>
      <% end %>

      <%= f.submit I18n.t(:log_in), class: "btn btn-primary" %>
    <% end %>

    <p>
      <%= I18n.t :new_user %> <%= link_to I18n.t(:sign_up), sign_up_path %>
    </p>
  </div>
</div>
