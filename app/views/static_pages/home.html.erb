<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t :activities %></h3>
      <%= render @activities unless @activities.blank? %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t :welcome %></h1>
    <h2><%= t :homepage %></h2>
    <%= link_to t(:sign_up), sign_up_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
