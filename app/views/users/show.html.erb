<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 50 %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <h3><%= t :activities %></h3>
    <div class="activities">
      <%= render @activities unless @activities.blank? %>
    </div>
    <hr>
  </div>
</div>
