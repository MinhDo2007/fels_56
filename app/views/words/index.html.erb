<div class="container">
  <%= render 'shared/search_form' %>
  <table class="table table-bordered">
    <tr>
      <th>ID</th>
      <th><%= t :word_content %></th>
    </tr>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.id %></td>
        <td><%= word.content %></td>
      </tr>
    <% end %>
  </table>
  <div class="col-md-6 col-md-offset-3 paginate">
    <%= will_paginate @words %>
  </div>
</div>
